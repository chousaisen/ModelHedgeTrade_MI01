#property copyright "rkee.rkk"
#property link      ""
#property version   "1.00"

class IDbConn {
   public:
      //+------------------------------------------------------------------+
      //|  打开数据库连接
      //|  @dbName    数据库名称或路径
      //+------------------------------------------------------------------+
      virtual bool   Open(string dbName) = 0;

      //+------------------------------------------------------------------+
      //|  关闭数据库连接
      //+------------------------------------------------------------------+
      virtual void   Close() = 0;

      //+------------------------------------------------------------------+
      //|  获取底层连接句柄
      //+------------------------------------------------------------------+
      virtual int    Handle() = 0;

      //+------------------------------------------------------------------+
      //|  获取数据库驱动名
      //+------------------------------------------------------------------+
      virtual string DriverName() = 0;
};
